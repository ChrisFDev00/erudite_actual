<%= turbo_frame_tag "tab_content" do %>
  <div class="p-4">
    <div class="grid grid-cols-3 gap-4 border border-indigo-500">
      <% @units.each do |unit| %>
        <% if unit.respond_to?(:topics) && unit.topics.any? %>
          <%= link_to unit_path(unit),
                      class: "card image-full shadow-sm hover:scale-105 transition-transform cursor-pointer",
                      data: { turbo_frame: "tab_content" } do %>
            <div class="card-body">
              <h2 class="card-title"><%= unit.title %></h2>
              <p><%= unit.description %></p>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

<% end %>