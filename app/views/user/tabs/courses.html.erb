<%= turbo_frame_tag "tab_content" do %>
  <div class="w-full flex justify-center items-center">
    <div class="grid grid-cols-3 grid-rows-2 gap-2 bg-amber-300 border-4 border-indigo-500 w-full">
      <%# TODO Max based on course subscriptions %>
      <% max_cards = 6 %>
      <% max_cards.times.with_index(1) do |_, i| %>
        <div class="card image-full w-96 shadow-sm col-span-1">
          <figure>
            <%= image_tag("https://robohash.org/#{rand}.png", size: "100x100", alt: "Course Image") %>
          </figure>
          <div class="card-body">
            <h2 class="card-title">Card <%= i %></h2>
            <p>A card component has a figure, a body part, and inside body there are title and actions parts.</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>