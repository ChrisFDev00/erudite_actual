
  <div class="border-2 text-center p-8 bg-base-200 rounded-lg">
    Hi <%= Current.user.account_type %>,
  </div>

  <div class="border-1 p-6 bg-base-100 rounded-lg">
    <div class="flex flex-col items-center justify-center text-white" data-controller="tabs">
      <div role="tablist" class="tabs tabs-lifted tabs-xl">
        <%= link_to "Overview", admin_overviews_path,
                    data: {
                      turbo_frame: "tab_content",
                      action: "click->tabs#activate",
                      tabs_target: "tab tab-secondary"
                    },
                    class: "tab tab-active" %>
        <%= link_to "Courses", admin_courses_path,
                    data: {
                      turbo_frame: "tab_content",
                      action: "click->tabs#activate",
                      tabs_target: "tab"
                    },
                    class: "tab" %>
        <%= link_to "Users", admin_users_path,
                    data: {
                      turbo_frame: "tab_content",
                      action: "click->tabs#activate",
                      tabs_target: "tab"
                    },
                    class: "tab" %>
        <%= link_to "Profile", user_path(Current.user),
                    data: {
                      turbo_frame: "tab_content",
                      action: "click->tabs#activate",
                      tabs_target: "tab"
                    },
                    class: "tab" %>
      </div>
    </div>
  </div>

  <div id="primary" class="flex flex-1 flex-col h-full">
    <%= turbo_frame_tag "tab_content", src: admin_overviews_path, class: "flex-1 flex flex-col" %>
  </div>
