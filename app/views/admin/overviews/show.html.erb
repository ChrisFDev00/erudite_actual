<%= turbo_frame_tag "tab_content" do %>
  <div class="col overflow-auto p-4 flex justify-center">
    <div class="stats stats-vertical lg:stats-horizontal shadow">
      <div class="stat flex flex-col items-center">
        <div class="text-2xl font-bold mb-2">Totals:</div>
      </div>

      <div class="stat">
        <div class="stat-title">Users:</div>
        <div class="stat-value">
          <%= @users.count %>
        </div>
      </div>

      <div class="stat">
        <div class="stat-title">Courses:</div>
        <div class="stat-value">
          <%= @courses.count %>
        </div>
      </div>

      <div class="stat">
        <div class="stat-title">Units:</div>
        <div class="stat-value">
          <%= @units.count %>
        </div>
      </div>

      <div class="stat">
        <div class="stat-title">Topics:</div>
        <div class="stat-value">
          <%= @topics.count %>
        </div>
      </div>
    </div>
  </div>
<% end %>