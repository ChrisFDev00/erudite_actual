<turbo-frame id="tab_content">
<div id="<%= dom_id @unit %>">
  <p>
    <strong>Title:</strong>
    <%= @unit.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @unit.description %>
  </p>

  <p>
    <strong>Course:</strong>
    <%= @unit.course_id %>
  </p>

  <p>
    <strong>Topics Covered:</strong><br>
    <% @unit.topics.each do |topic| %>
      <%= topic.title %>: <br>
      <em class="ml-4"><%= topic.description %></em><br>
    <% end %>
  </p>

  <% if @unit.topics.any? %>
    <% @unit.topics.each do |topic| %>
      <%# Dump files if attached %>
      <% if topic.files.attached? %>
        <%= image_tag(topic.files.first, size: "100x100") %>
      <% end %>
    <% end %>
  <% else %>
    <p>No topics or images available.</p>
  <% end %>
</div>
</turbo-frame>