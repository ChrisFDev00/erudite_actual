<% Admin %>
<div class="grid grid-rows-[auto_auto_1fr] gap-3 w-full">
  <div class="border-2  text-center p-8">
    Hi <%= Current.user.account_type %>,
  </div>

  <div class="border-1  p-6">
    <div class="flex flex-col items-center justify-center text-white" data-controller="tabs">
      <div role="tablist" class="tabs tabs-lift tabs-xl">
      <%= link_to "Overview", admin_dashboard_overview_path,
                  data: {
                        turbo_frame: "tab_content",
                        action: "click->tabs#activate",
                        tabs_target: "tab" },
                        class: "tab tab-active" %>
      <%= link_to "Courses", admin_courses_path,
                  data: {
                        turbo_frame: "tab_content",
                        action: "click->tabs#activate",
                        tabs_target: "tab" },
                        class: "tab" %>
      <%= link_to "Users", admin_users_path,
                  data: {
                        turbo_frame: "tab_content",
                        action: "click->tabs#activate",
                        tabs_target: "tab" },
                        class: "tab" %>
        <%= link_to "Profile", user_path(Current.user),
                    data: {
                      turbo_frame: "tab_content",
                      action: "click->tabs#activate",
                      tabs_target: "tab" },
                    class: "tab" %>
    </div>
  </div>

  <%= turbo_frame_tag "tab_content", src: admin_dashboard_overview_path, class: "col-span-3 row-start-3 h-64 overflow-y-auto" %>
</div>
</div>