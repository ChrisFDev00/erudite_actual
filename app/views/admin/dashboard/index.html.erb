<div class="w-full flex justify-center items-center">
  <div class="grid grid-cols-1 grid-rows-4 gap-2 w-full min-h-screen">
    <div class="col-span-3  flex items-center justify-center text-white w-full">
      Hi <%= Current.user.first_name %>,
    </div>

    <div class="h-20col-span-3 row-start-2  flex flex-col items-center justify-center text-white w-full" data-controller="tabs">
      <div role="tablist" class="tabs tabs-lift tabs-xl">
        <%= link_to "Overview", admin_dashboard_index_path, data: { turbo_frame: "tab_content", }, class: "tab" %>
        <%= link_to "Courses", admin_courses_path, data: { turbo_frame: "tab_content"  }, class: "tab" %>
        <%= link_to "Users", admin_users_path, data: { turbo_frame: "tab_content" }, class: "tab" %>
      </div>
    </div>

    <%= turbo_frame_tag "tab_content", src: admin_dashboard_index_path, class: "col-span-3 row-start-3 h-64 overflow-y-auto" %>
  </div>
</div>
