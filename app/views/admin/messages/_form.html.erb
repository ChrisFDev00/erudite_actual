<%= turbo_frame_tag "messages" do %>
  <%= form_with(model: [:admin, topic, topic.messages.new],
                class: "card w-full max-w-lg mx-auto bg-base-100 shadow-xl p-6",
                id: "new-message-form",
                data: { turbo_frame: "messages" }) do |f| %>

      <%= f.label :content, "Enter your message:" %>
      <%= f.text_area :content, autofocus: true,
                      required: true,
                      data: { conversation_target: "textArea",
                              action: "keydown->message#submitForm" }  %>

      <%= f.submit nil, class: "hidden" %>
  <% end %>
<% end %>