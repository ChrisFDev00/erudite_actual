<div class="flex flex-col gap-4">
  <div class="text-2xl font-bold mb-2">Schedule</div>
  <%= week_calendar(number_of_weeks: 2, events: @assignments) do |date, assignments| %>
    <%= date %>
    <% assignments.each do |assignment| %>
      <div class="text-sm text-gray-700 mt-1">
        <%= assignment.title %>
      </div>
    <% end %>
  <% end %>
</div>
